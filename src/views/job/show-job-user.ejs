<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Job Details</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
        <style>
            .job-card,
            .job-details,
            .company-card,
            .general-info {
                border: 1px solid #e0e0e0;
                border-radius: 8px;
                padding: 20px;
                background-color: #fff;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                margin-top: 20px;
            }
            .job-title {
                font-size: 1.25rem;
                font-weight: bold;
                color: #333;
            }
            .job-info {
                display: flex;
                justify-content: space-around;
                margin-top: 15px;
                margin-bottom: 15px;
            }
            .job-info-item {
                text-align: center;
            }
            .job-info-item i {
                font-size: 1.5rem;
                color: #28a745;
            }
            .job-info-item span {
                display: block;
                font-weight: bold;
            }
            .job-deadline {
                color: #757575;
                font-size: 0.9rem;
            }
            .edit-btn,
            .apply-btn {
                background-color: #28a745;
                color: white;
                font-weight: bold;
                border: none;
                padding: 10px 20px;
                border-radius: 5px;
                text-align: center;
                display: inline-block;
                margin-top: 20px;
                cursor: pointer;
                text-decoration: none;
            }
            .edit-btn:hover,
            .apply-btn:hover {
                background-color: #218838;
            }
            .section-title {
                font-weight: bold;
                color: #333;
                margin-top: 15px;
                font-size: 1.2rem;
                border-left: 4px solid #28a745;
                padding-left: 10px;
            }
            .company-logo {
                width: 80px;
                height: 80px;
                border-radius: 50%;
                overflow: hidden;
                margin-bottom: 10px;
            }
            .company-logo img {
                width: 100%;
                height: auto;
            }
            .company-link {
                color: #28a745;
                font-weight: bold;
                text-decoration: none;
            }
            .company-link:hover {
                text-decoration: underline;
            }
            .general-info-item {
                display: flex;
                align-items: center;
                margin-bottom: 15px;
                color: #333;
            }
            .general-info-item i {
                font-size: 1.5rem;
                color: #28a745;
                margin-right: 10px;
            }
            .general-info-item span {
                font-weight: bold;
                display: block;
                color: #333;
            }
        </style>
    </head>

    <body>
        <%- include('../partials/header') %> <%- include('../partials/search') %>
        <div class="container mt-4">
            <div class="row">
                <!-- Job Summary and Details Section (6/10 width) -->
                <div class="col-md-6">
                    <div class="job-card p-4">
                        <!-- Job Title -->
                        <div class="job-title"><%= job.title %></div>

                        <!-- Job Information (Salary, Location, Experience) -->
                        <div class="job-info">
                            <div class="job-info-item">
                                <i class="bi bi-currency-dollar"></i>
                                <span>Mức lương</span>
                                <div><%= job.salary %></div>
                            </div>
                            <div class="job-info-item">
                                <i class="bi bi-geo-alt"></i>
                                <span>Địa điểm</span>
                                <div><%= job.region %></div>
                            </div>
                            <div class="job-info-item">
                                <i class="bi bi-hourglass-split"></i>
                                <span>Kinh nghiệm</span>
                                <div><%= job.experienceYears %> năm</div>
                            </div>
                        </div>
                        <% if (user) { %>
                        <!-- Job Deadline -->
                        <div class="job-deadline">
                            <i class="bi bi-clock"></i> Hạn nộp hồ sơ: <%= job.deadline.toLocaleDateString('vi-VN') %>
                        </div>

                        <!-- Apply Now Button -->
                        <form id="applyForm" action="/job/apply/<%= job._id %>" method="POST">
                            <!-- Button to trigger modal -->

                            <button
                                type="button"
                                class="apply-btn"
                                data-bs-toggle="modal"
                                data-bs-target="#applyJobModal"
                            >
                                Ứng tuyển ngay
                            </button>

                            <!-- Modal -->
                            <div
                                class="modal fade"
                                id="applyJobModal"
                                tabindex="-1"
                                aria-labelledby="applyJobModalLabel"
                                aria-hidden="true"
                            >
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="applyJobModalLabel">
                                                Bạn đang ứng tuyển vị trí
                                            </h5>
                                            <button
                                                type="button"
                                                class="btn-close"
                                                data-bs-dismiss="modal"
                                                aria-label="Close"
                                            ></button>
                                        </div>
                                        <div class="modal-body">
                                            <h6><%= job.title %></h6>
                                            <form>
                                                <!-- Thông tin cơ bản -->
                                                <div class="mb-3">
                                                    <label for="name" class="form-label">Họ và tên</label>
                                                    <input
                                                        type="text"
                                                        class="form-control"
                                                        id="name"
                                                        value="<%= user.fullname %>"
                                                    />
                                                </div>
                                                <div class="mb-3">
                                                    <label for="phone" class="form-label">Số điện thoại</label>
                                                    <input
                                                        type="text"
                                                        class="form-control"
                                                        id="phone"
                                                        value="<%= user.phoneNumber %>"
                                                    />
                                                </div>
                                                <div class="mb-3">
                                                    <label for="email" class="form-label">Email</label>
                                                    <input
                                                        type="email"
                                                        class="form-control"
                                                        id="email"
                                                        value="<%= user.email %>"
                                                    />
                                                </div>

                                                <!-- Chọn CV -->
                                                <div class="mb-3">
                                                    <label for="cv" class="form-label">Chọn CV</label>
                                                    <select class="form-select" id="cv">
                                                        <% if (user.CV.size == 0) { %> <% user.CV.forEach(cv => { %>
                                                        <option value="<%= cv.title %>"><%= cv.title %></option>
                                                        <% }) %> <% } else { %>
                                                        <option disabled selected>Bạn chưa upload CV nào</option>
                                                        <% } %>
                                                    </select>
                                                    <small class="text-muted">CV ứng tuyển gần nhất</small>
                                                </div>
                                                <div class="mb-3">
                                                    <label for="coverLetter" class="form-label">Thư giới thiệu</label>
                                                    <textarea
                                                        class="form-control"
                                                        id="coverLetter"
                                                        rows="3"
                                                        placeholder="Nhập đoạn giới thiệu bản thân hoặc đường link portfolio của bạn"
                                                    ></textarea>
                                                </div>

                                                <!-- File upload -->
                                                <div class="mb-3">
                                                    <label for="fileUpload" class="form-label">Tải lên CV mới</label>
                                                    <input class="form-control" type="file" id="fileUpload" />
                                                    <small class="text-muted"
                                                        >Hỗ trợ định dạng: .doc, .docx, .pdf, .xls. Dung lượng <
                                                        5MB</small
                                                    >
                                                </div>
                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                Hủy
                                            </button>
                                            <button
                                                type="button"
                                                class="apply-btn"
                                                onclick="applyToJob('<%= job._id %>')"
                                            >
                                                Ứng tuyển
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <% } %>
                        <div id="applyMessage" style="display: none; color: green; margin-top: 10px">
                            Job application successful!
                        </div>
                    </div>

                    <!-- Job Details Section -->
                    <div class="job-details p-4">
                        <div class="section-title">Chi tiết tuyển dụng</div>
                        <div class="job-detail-section"><strong>Loại công việc:</strong> <%= job.typeOfWork %></div>
                        <div class="section-title">Mô tả công việc</div>
                        <div class="job-detail-section">
                            <p><%- job.description %></p>
                        </div>
                        <div class="section-title">Yêu cầu ứng viên</div>
                        <div class="job-detail-section">
                            <p><%- job.requirement %></p>
                        </div>
                        <div class="section-title">Kỹ năng chuyên môn</div>
                        <div class="job-detail-section">
                            <p><%= job.skills.join(', ') %></p>
                        </div>
                        <div class="section-title">Quyền lợi</div>
                        <div class="job-detail-section">
                            <p><%- job.benefit %></p>
                        </div>
                        <div class="section-title">Địa điểm làm việc</div>
                        <div class="job-detail-section">
                            <p><%= job.location %></p>
                        </div>
                        <div class="section-title">Thời gian làm việc</div>
                        <div class="job-detail-section">
                            <p><%= job.time %></p>
                        </div>
                    </div>
                </div>

                <!-- Company Info Section (4/10 width) -->
                <div class="col-md-4">
                    <div class="company-card p-4 text-center">
                        <!-- Company Logo -->
                        <div class="company-logo">
                            <img src="<%= job.companyId.logoPath || '/images/default_logo.png' %>" alt="Company Logo" />
                        </div>
                        <!-- Company Name -->
                        <h5><%= job.companyId.companyName %></h5>

                        <!-- Company Details -->
                        <p><i class="bi bi-telephone-fill"></i> Số điện thoại: <%= job.companyId.phoneNumber %></p>
                        <p><i class="bi bi-envelope-fill"></i> Email: <%= job.companyId.email %></p>
                        <p><i class="bi bi-geo-alt-fill"></i> Địa chỉ: <%= job.companyId.location %></p>

                        <!-- Company Link -->
                        <a href="/company/<%= job.companyId._id %>" class="company-link" target="_blank">
                            Xem trang công ty <i class="bi bi-box-arrow-up-right"></i>
                        </a>
                    </div>

                    <!-- General Information Section -->
                    <div class="general-info p-4">
                        <h5 class="text-left">Thông tin chung</h5>
                        <div class="general-info-item">
                            <i class="bi bi-award-fill"></i>
                            <div>
                                <span>Cấp bậc:</span>
                                <div><%= job.level %></div>
                            </div>
                        </div>
                        <div class="general-info-item">
                            <i class="bi bi-hourglass-split"></i>
                            <div>
                                <span>Kinh nghiệm:</span>
                                <div><%= job.experienceYears %> năm</div>
                            </div>
                        </div>
                        <div class="general-info-item">
                            <i class="bi bi-people-fill"></i>
                            <div>
                                <span>Số lượng tuyển:</span>
                                <div><%= job.number_of_recruitment %> người</div>
                            </div>
                        </div>
                        <div class="general-info-item">
                            <i class="bi bi-briefcase-fill"></i>
                            <div>
                                <span>Phương thức làm việc:</span>
                                <div><%= job.typeOfWork %></div>
                            </div>
                        </div>
                        <div class="general-info-item">
                            <i class="bi bi-briefcase-fill"></i>
                            <div>
                                <span>Hình thức làm việc:</span>
                                <div><%= job.type %></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

        <!-- JavaScript for Applying to Job -->
        <script>
            document.getElementById("fileUpload").addEventListener("change", function () {
                const file = this.files[0];
                if (file.size > 5 * 1024 * 1024) {
                    alert("File size must be less than 5MB");
                    this.value = "";
                }
                document.getElementById("cv").value = file.name;
                document.getElementById("cv").disabled = true;
            });
            async function applyToJob(jobId) {
                const name = document.getElementById("name").value;
                const phoneNumber = document.getElementById("phone").value;
                const email = document.getElementById("email").value;
                const cvTitle = document.getElementById("cv").value;
                const coverLetter = document.getElementById("coverLetter").value;
                const file = document.getElementById("fileUpload").files[0];
                let isFileUploaded = false;
                let fileUpload = {};

                if (!name || !phoneNumber || !email) {
                    alert("Please fill in all fields");
                    return;
                }
                if (!cvTitle && !file) {
                    alert("Please select a CV file or upload a new one");
                    return;
                }

                if (file) {
                    isFileUploaded = true;
                    fileUpload = {
                        name: file.name,
                        type: file.type,
                        size: file.size,
                        data: await convertFileToBase64(file),
                    };
                }

                fetch(`/job/${jobId}/apply`, {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify({
                        name,
                        phoneNumber,
                        email,
                        cvTitle,
                        coverLetter,
                        isFileUploaded,
                        fileUpload,
                    }),
                })
                    .then((response) => response.json())
                    .then((data) => {
                        if (data.success) {
                            const messageDiv = document.getElementById("applyMessage");
                            messageDiv.style.display = "block";

                            // Hide the message after 3 seconds
                            setTimeout(() => {
                                messageDiv.style.display = "none";
                            }, 3000);
                        } else {
                            alert(data.message);
                        }
                    })
                    .catch((error) => {
                        console.error("Error:", error);
                        alert("An error occurred. Please try again.");
                    });
            }
            function convertFileToBase64(file) {
                return new Promise((resolve, reject) => {
                    const reader = new FileReader();
                    reader.onload = () => resolve(reader.result.split(",")[1]); // Loại bỏ tiền tố Base64
                    reader.onerror = (error) => reject(error);
                    reader.readAsDataURL(file);
                });
            }
        </script>
        <%-include('../partials/footer') %>
    </body>
</html>
