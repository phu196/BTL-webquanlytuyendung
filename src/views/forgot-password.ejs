<!DOCTYPE html>
<html lang="vi">
    <head>
        <meta charset="UTF-8" />
        <title>Quên Mật Khẩu</title>
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
        <style>
            /* Đảm bảo trang chiếm toàn bộ chiều cao viewport */
            html,
            body {
                height: 100%;
            }
        </style>
    </head>
    <body>
        <div class="d-flex justify-content-center align-items-center min-vh-100">
            <div class="w-100" style="max-width: 400px">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h2 class="mb-4 text-center">Quên Mật Khẩu</h2>

                        <div id="message"></div>

                        <form>
                            <div class="mb-3">
                                <label for="identifier" class="form-label">Email hoặc Username</label>
                                <input
                                    type="text"
                                    class="form-control"
                                    id="identifier"
                                    name="identifier"
                                    placeholder="Nhập email hoặc username"
                                    required
                                />
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Gửi</button>
                        </form>
                    </div>
                </div>
                <p class="mt-3 text-center text-muted">© 2024 Your Company</p>
            </div>
        </div>
        <script>
            const form = document.querySelector("form");
            form.addEventListener("submit", async (e) => {
                e.preventDefault();
                const identifier = document.getElementById("identifier").value;
                fetch("/auth/forgot-password", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify({ identifier }),
                })
                    .then((res) => res.json())
                    .then((data) => {
                        if (data.success) {
                            document.getElementById("message").innerHTML = `
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    Bạn sẽ nhận được email hướng dẫn khôi phục mật khẩu trong ít phút (Nếu email bạn cung cấp là hợp lệ).
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            `;
                        } else {
                            document.getElementById("message").innerHTML = `
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    ${data.message}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            `;
                        }
                    });
            });
        </script>
        <!-- Bootstrap JS và các phụ thuộc -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
