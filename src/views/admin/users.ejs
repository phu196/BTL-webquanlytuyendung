<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/admin-head', {title: "Users Control - Admin Panel"}) %>
        <title>users - Admin Panel</title>
    </head>
    <body>
        <%- include('../partials/admin-sidebar') %>

        <div class="main-content">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Users</h2>
                <a href="/admin/users/add" class="btn btn-primary" style="margin-right: 150px">Add User</a>
            </div>
            <p>List of registered users:</p>
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% for( let i = 0; i < users.length; i++ ) { %>
                    <tr>
                        <td><%= i + 1 %></td>
                        <td><%= users[i]["username"] %></td>
                        <td><%= users[i]["email"] %></td>
                        <td><button id="<%= users[i]["_id"] %>" class="btn btn-danger btn-sm" onclick="handleDelete(this.id)">Delete</button></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.19/dist/sweetalert2.min.js"></script>

        <script>
            const handleDelete = (id) => {
                Swal.fire({
                    title: 'Are you sure?',
                    text: "This action cannot be undone!",
                    icon: 'warning',
                    showCancelButton: true, // Hiển thị nút Cancel
                    confirmButtonText: 'Yes, delete it!',
                    cancelButtonText: 'No, cancel!',
                    reverseButtons: true // Đảo ngược vị trí của các nút
                }).then((result) => {
                    if (result.isConfirmed) {
                        Swal.close(); // Đóng popup
                        Swal.fire({
                            title: 'Đang xóa...',
                            html: 'Vui lòng đợi trong giây lát...',
                            allowOutsideClick: false,
                            didOpen: () => {
                                Swal.showLoading();
                            }
                        });
                        fetch("/admin/users/delete", {
                            method: "POST",
                            headers: {
                                "Content-Type": "application/json",
                            },
                            body: JSON.stringify({ id }),
                        })
                            .then((response) => {
                                return response.json();
                            })
                            .then((data) => {
                                Swal.close();
                                if (data.success) {
                                    Swal.fire({
                                        icon: "success",
                                        title: "Thành công!",
                                        text: "Xóa thành công người dùng!",
                                        showConfirmButton: false,
                                        timer: 1500,
                                    }).then(() => {
                                        window.location.href = "/admin/users"; 
                                    });
                                } else {
                                    Swal.fire({
                                        icon: "error",
                                        title: "Lỗi",
                                        text: "Xóa thất bại. Vui lòng thử lại!",
                                        showConfirmButton: true,
                                    });
                                }
                            });
                    } else if (result.isDenied) {
                      Swal.fire('Changes are not saved', '', 'info')
                    }
                  });
                return;
            }
        </script>
    </body>
</html>
