<!DOCTYPE html>
<html lang="vi">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Upload CV</title>
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
        <!-- Font Awesome -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
        <style>
            body {
                background-color: #f8f9fa;
            }
            .card {
                border-radius: 10px;
                margin-bottom: 20px;
            }
            .upload-container {
                display: flex;
                justify-content: center;
                align-items: center;
                flex-direction: column;
            }
            .upload-box {
                border: 2px dashed #007bff;
                padding: 30px;
                border-radius: 10px;
                width: 100%;
                max-width: 500px;
                text-align: center;
            }
            .upload-box p {
                color: #007bff;
                font-weight: bold;
            }
            .upload-box .form-control {
                border-radius: 10px;
                border: 2px dashed #007bff;
            }
            .btn-upload {
                margin-top: 15px;
            }
            .btn-cancel {
                margin-top: 15px;
            }
            .text-muted {
                font-size: 0.9rem;
            }
            .alert {
                margin-top: 20px;
            }
        </style>
    </head>
    <body>
        <div class="container my-5">
            <div class="upload-container">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <i class="fa-solid fa-upload me-2"></i> Upload CV
                    </div>
                    <div class="card-body">
                        <div class="upload-box">
                            <h4 class="text-primary">Tải lên CV của bạn ở đây</h4>
                            <p class="text-muted">
                                Tiết kiệm thời gian, tìm việc thông minh, nắm bắt cơ hội và làm chủ đường đưa nghề
                                nghiệp của chính mình.
                            </p>
                            <form id="uploadForm" action="" method="POST" enctype="multipart/form-data">
                                <div class="mb-3">
                                    <input type="file" name="cv" class="form-control" accept=".pdf" required />
                                    <div class="text-muted">Hỗ trợ định dạng .pdf (dưới 5MB)</div>
                                </div>
                                <button type="submit" class="btn btn-success btn-upload">
                                    <i class="fa-solid fa-cloud-upload-alt me-2"></i> Tải CV lên
                                </button>
                                <button
                                    type="button"
                                    class="btn btn-danger btn-cancel"
                                    onclick="window.location.href = '/user/profile'"
                                >
                                    <i class="fa-solid fa-arrow-left me-2"></i> Quay lại
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.19/dist/sweetalert2.min.js"></script>
        <script>
            const uploadForm = document.getElementById("uploadForm");
            uploadForm.addEventListener("submit", function (event) {
                event.preventDefault();
                Swal.fire({
                    title: "Đang thực hiện...",
                    html: "Vui lòng đợi trong giây lát...",
                    allowOutsideClick: false,
                    didOpen: () => {
                        Swal.showLoading(); // Hiển thị vòng quay loading
                    },
                });
                const fileInput = uploadForm.querySelector("input[type='file']");
                const file = fileInput.files[0];
                if (!file) {
                    Swal.close();
                    Swal.fire({
                        icon: "error",
                        title: "Lỗi",
                        text: "Vui lòng chọn một file trước khi tải lên.",
                        showConfirmButton: true,
                    });
                    return;
                }
                if (file.size > 5 * 1024 * 1024) {
                    Swal.close();
                    Swal.fire({
                        icon: "error",
                        title: "Lỗi",
                        text: "Dung lượng file không được vượt quá 5MB.",
                        showConfirmButton: true,
                    });
                    return;
                }

                const formData = new FormData(uploadForm);

                fetch("/user/upload-cv", {
                    method: "POST",
                    body: formData,
                })
                    .then((res) => {
                        if (!res.ok) throw new Error("Tải lên thất bại");
                        return res.json();
                    })
                    .then((data) => {
                        Swal.close();
                        if (data.success) {
                            Swal.fire({
                                icon: "success",
                                title: "Thành công!",
                                text: "Tải lên CV thành công!",
                                showConfirmButton: false,
                                timer: 1500,
                            }).then(() => {
                                window.location.href = "/user/profile";
                            });
                        } else {
                            Swal.fire({
                                icon: "error",
                                title: "Lỗi",
                                text: "Tải lên CV thất bại! Xin hãy thử lại!",
                                showConfirmButton: true,
                            });
                        }
                    })
                    .catch((err) => {
                        Swal.fire({
                            icon: "error",
                            title: "Lỗi",
                            text: "Lỗi khi tải lên CV!",
                            showConfirmButton: true,
                        });
                    });
            });
        </script>
    </body>
</html>
