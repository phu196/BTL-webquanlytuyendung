<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hoàn thành thông tin của bạn</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #eef2f7;
            font-family: 'Arial', sans-serif;
        }

        .container {
            max-width: 700px;
            background: #ffffff;
            border-radius: 12px;
            padding: 30px;
            margin: 30px auto;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
        }

        h2 {
            color: #2c3e50;
            margin-bottom: 25px;
            font-weight: bold;
            text-align: center;
        }

        .form-label {
            font-weight: bold;
            color: #34495e;
        }

        input[type="text"],
        input[type="email"],
        input[type="tel"],
        input[type="file"],
        select {
            border-radius: 8px;
            border: 1px solid #ced4da;
            padding: 10px;
            transition: all 0.3s ease-in-out;
        }

        input[type="text"]:focus,
        input[type="email"]:focus,
        input[type="tel"]:focus,
        input[type="file"]:focus,
        select:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.3);
        }

        h4 {
            font-size: 20px;
            margin-top: 30px;
            margin-bottom: 15px;
            color: #2c3e50;
            font-weight: bold;
        }

        button {
            width: 100%;
            background-color: #007bff;
            color: #ffffff;
            border-radius: 8px;
            padding: 12px;
            border: none;
            font-size: 16px;
            font-weight: bold;
            transition: all 0.3s ease;
        }

        button:hover {
            background-color: #0056b3;
            box-shadow: 0 5px 15px rgba(0, 91, 187, 0.3);
        }

        .mb-3 {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
<div class="container mt-5">
    <h2>Hoàn thành thông tin của bạn</h2>
    <form action="/user/created" method="POST" enctype="multipart/form-data">
        <!-- Avatar -->
        <div class="mb-3">
            <label for="avatar" class="form-label">Đăng ảnh đại diện</label>
            <input type="file" id="avatar" name="avatar" accept="image/*" class="form-control" required>
        </div>

        <!-- Username -->
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control" id="username" name="username" value="<%= user.username %>" readonly>
        </div>

        <!-- Fullname -->
        <div class="mb-3">
            <label for="fullname" class="form-label">Họ tên</label>
            <input type="text" class="form-control" id="fullname" name="fullname" value="<%= user.fullname %>" readonly>
        </div>

         <!-- Gender -->
         <div class="mb-3">
            <label for="gender" class="form-label">Giới tính</label>
            <select class="form-select" id="gender" name="gender">
                <option value="male">Nam</option>
                <option value="female">Nữ</option>
                <option value="other">Khác</option>
            </select>
        </div>

        <!-- Email -->
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" readonly>
        </div>

        <!-- Phone Number -->
        <div class="mb-3">
            <label for="phoneNumber" class="form-label">Số điện thoại</label>
            <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber" value="<%= user.phoneNumber %>" readonly>
        </div>

        <!-- Address -->
        <h4>Địa chỉ</h4>
            <div class="mb-3">
                <label for="detail" class="form-label">Địa chỉ cụ thể</label>
                <input type="text" class="form-control" id="detail" name="address.detail" placeholder="Enter detailed address" value="<%= user.address?.detail || '' %>">
            </div>
            <div class="mb-3">
                <label for="province" class="form-label">Tỉnh/ Thành phố</label>
                <select class="form-select" id="province" name="address.province">
                    <option value="">Chọn tỉnh/thành phố</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="district" class="form-label">Quận/ Huyện</label>
                <select class="form-select" id="district" name="address.district">
                    <option value="">Chọn quận/huyện</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="ward" class="form-label">Phường/ Xã</label>
                <select class="form-select" id="ward" name="address.ward">
                    <option value="">Chọn phường/xã</option>
                </select>
            </div>
        <!-- Submit Button -->
        <button type="submit">Xác nhận</button>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
  // Fetch dữ liệu từ API
  fetch('/api/locations')
    .then((response) => response.json())
    .then((data) => {
        if (data.success) {
            const locations = data.locations;

            const provinceSelect = document.getElementById('province');
            const districtSelect = document.getElementById('district');
            const wardSelect = document.getElementById('ward');

            // Load Tỉnh/Thành phố
            function loadProvinces(locations) {
                provinceSelect.innerHTML = '<option value="">Chọn tỉnh/thành phố</option>';
                for (const [code, province] of Object.entries(locations)) {
                    const option = document.createElement('option');
                    option.value = province.name; // Dùng tên
                    option.textContent = province.name;
                    provinceSelect.appendChild(option);
                }
            }

            // Load Quận/Huyện
            function loadDistricts(provinceName) {
                districtSelect.innerHTML = '<option value="">Chọn quận/huyện</option>';
                wardSelect.innerHTML = '<option value="">Chọn phường/xã</option>';

                const provinceCode = Object.keys(locations).find(
                    (key) => locations[key].name === provinceName
                );

                if (provinceCode && locations[provinceCode]?.['quan-huyen']) {
                    const districts = locations[provinceCode]['quan-huyen'];
                    for (const [code, district] of Object.entries(districts)) {
                        const option = document.createElement('option');
                        option.value = district.name; // Dùng tên
                        option.textContent = district.name;
                        districtSelect.appendChild(option);
                    }
                }
            }

            // Load Phường/Xã
            function loadWards(provinceName, districtName) {
                wardSelect.innerHTML = '<option value="">Chọn phường/xã</option>';

                const provinceCode = Object.keys(locations).find(
                    (key) => locations[key].name === provinceName
                );

                const districtCode = Object.keys(locations[provinceCode]['quan-huyen']).find(
                    (key) => locations[provinceCode]['quan-huyen'][key].name === districtName
                );

                if (
                    provinceCode &&
                    districtCode &&
                    locations[provinceCode]?.['quan-huyen']?.[districtCode]?.['xa-phuong']
                ) {
                    const wards = locations[provinceCode]['quan-huyen'][districtCode]['xa-phuong'];
                    for (const [code, ward] of Object.entries(wards)) {
                        const option = document.createElement('option');
                        option.value = ward.name; // Dùng tên
                        option.textContent = ward.name;
                        wardSelect.appendChild(option);
                    }
                }
            }

            // Event listeners
            provinceSelect.addEventListener('change', (e) => {
                const provinceName = e.target.value;
                loadDistricts(provinceName);
            });

            districtSelect.addEventListener('change', (e) => {
                const districtName = e.target.value;
                const provinceName = provinceSelect.value;
                loadWards(provinceName, districtName);
            });

            // Khởi tạo
            loadProvinces(locations);
        }
    })
    .catch((err) => {
        console.error('Error fetching locations:', err);
    });


</script>
</body>
</html>