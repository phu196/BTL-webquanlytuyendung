<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Cập nhật thông tin công ty</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
        <style>
            body {
                background: linear-gradient(135deg, #74ebd5, #acb6e5); /* Gradient background */
                font-family: "Arial", sans-serif;
                color: #34495e;
            }

            .container {
                max-width: 800px;
                margin: 50px auto;
                background: #ffffff;
                padding: 30px;
                border-radius: 15px;
                box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
            }

            h3 {
                text-align: center;
                font-size: 24px;
                font-weight: bold;
                color: #2c3e50;
                margin-bottom: 30px;
            }

            label {
                font-weight: bold;
                margin-bottom: 8px;
                display: inline-block;
                color: #2c3e50;
            }

            input[type="text"],
            input[type="email"],
            input[type="tel"],
            input[type="file"],
            input[type="url"],
            textarea,
            select {
                border-radius: 8px;
                border: 1px solid #ced4da;
                padding: 10px;
                width: 100%;
                box-shadow: none;
                transition: all 0.3s ease-in-out;
            }

            input:focus,
            textarea:focus {
                border-color: #007bff;
                box-shadow: 0 0 10px rgba(0, 123, 255, 0.3);
            }

            textarea {
                resize: none;
            }

            .btn-primary {
                background-color: #007bff;
                border: none;
                border-radius: 8px;
                padding: 12px 20px;
                font-size: 16px;
                font-weight: bold;
                transition: all 0.3s ease;
            }

            .btn-primary:hover {
                background-color: #0056b3;
                box-shadow: 0 5px 15px rgba(0, 91, 187, 0.4);
            }

            .btn-secondary {
                background-color: #6c757d;
                border: none;
                border-radius: 8px;
                padding: 12px 20px;
                font-size: 16px;
                font-weight: bold;
                transition: all 0.3s ease;
            }

            .btn-secondary:hover {
                background-color: #5a6268;
                box-shadow: 0 5px 15px rgba(90, 98, 104, 0.4);
            }

            .form-control {
                background: #f8f9fa; /* Light background for inputs */
            }

            .form-control:focus {
                background: #ffffff; /* Brighter background on focus */
            }

            .form-label {
                font-size: 14px;
            }

            .btn-group {
                display: flex;
                gap: 15px;
            }

            h4 {
                margin-top: 30px;
                font-size: 20px;
                font-weight: bold;
                color: #007bff;
            }

            .mb-3 {
                margin-bottom: 20px;
            }
        </style>
    </head>
    <body>
        <div class="container mt-4">
            <h3>Cập nhật thông tin công ty</h3>
            <form id="companyForm" action="/company/update" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="logo" class="form-label">Logo công ty</label>
                    <input type="file" id="logo" name="logo" accept="image/*" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="companyName" class="form-label">Tên công ty</label>
                    <input
                        type="text"
                        class="form-control"
                        id="companyName"
                        name="companyName"
                        value="<%= company.companyName %>"
                        required
                    />
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input
                        type="email"
                        class="form-control"
                        id="email"
                        name="email"
                        value="<%= company.email %>"
                        required
                    />
                </div>

                <div class="mb-3">
                    <label for="phone" class="form-label">Số điện thoại</label>
                    <input
                        type="tel"
                        class="form-control"
                        id="phone"
                        name="phoneNumber"
                        value="<%= company.phoneNumber %>"
                    />
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Mô tả về công ty</label>
                    <textarea class="form-control" id="description" name="description" rows="3" required>
<%= company.description %></textarea
                    >
                </div>

                <div class="mb-3">
                    <label for="website" class="form-label">Đường dẫn tới website công ty</label>
                    <input type="url" class="form-control" id="website" name="website" value="<%= company.website %>" />
                </div>

                <h4>Địa chỉ chi tiết</h4>

                <div class="mb-3">
                    <label for="addressDetail" class="form-label">Địa chỉ cụ thể</label>
                    <input
                        type="text"
                        class="form-control"
                        id="addressDetail"
                        name="addressDetail"
                        value="<%= company.address.detail %>"
                    />
                </div>

                <div class="mb-3">
                    <label for="province" class="form-label">Tỉnh/ Thành phố</label>
                    <select id="province" class="form-control" name="province">
                        <option value="<%= company.address?.province || '' %>">
                            <%= company.address?.province || "" %>
                        </option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="district" class="form-label">Quận/ Huyện</label>
                    <select id="district" class="form-control" name="district">
                        <option value="<%= company.address?.district || '' %>">
                            <%= company.address?.district || "" %>
                        </option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="ward" class="form-label">Phường/ Xã</label>
                    <select id="ward" class="form-control" name="ward">
                        <option value="<%= company.address?.ward || '' %>"><%= company.address?.ward || "" %></option>
                    </select>
                </div>

                <div class="btn-group">
                    <a href="/" class="btn btn-secondary">Hủy</a>
                    <button type="submit" class="btn btn-primary">Hoàn thành thông tin</button>
                </div>
            </form>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.19/dist/sweetalert2.min.js"></script>
        <script>
            // Fetch dữ liệu từ API
            fetch("/api/locations")
                .then((response) => response.json())
                .then((data) => {
                    if (data.success) {
                        const locations = data.locations;
                        const provinceSelect = document.getElementById("province");
                        const districtSelect = document.getElementById("district");
                        const wardSelect = document.getElementById("ward");

                        // Load provinces
                        function loadProvinces(locations) {
                            for (const [code, province] of Object.entries(locations)) {
                                const option = document.createElement("option");
                                option.value = province.name; // Dùng tên
                                option.textContent = province.name;
                                provinceSelect.appendChild(option);
                            }
                        }

                        // Load districts
                        function loadDistricts(provinceName) {
                            districtSelect.innerHTML = '<option value="">Chọn quận/huyện</option>';
                            wardSelect.innerHTML = '<option value="">Chọn phường/xã</option>';

                            const provinceCode = Object.keys(locations).find(
                                (key) => locations[key].name === provinceName
                            );

                            if (provinceCode && locations[provinceCode]?.["quan-huyen"]) {
                                const districts = locations[provinceCode]["quan-huyen"];
                                Object.entries(districts).forEach(([code, district]) => {
                                    const option = document.createElement("option");
                                    option.value = district.name;
                                    option.textContent = district.name;
                                    districtSelect.appendChild(option);
                                });
                            }
                        }

                        // Load wards
                        function loadWards(provinceName, districtName) {
                            wardSelect.innerHTML = '<option value="">Chọn phường/xã</option>';

                            const provinceCode = Object.keys(locations).find(
                                (key) => locations[key].name === provinceName
                            );
                            const districtCode = Object.keys(locations[provinceCode]["quan-huyen"]).find(
                                (key) => locations[provinceCode]["quan-huyen"][key].name === districtName
                            );

                            if (
                                provinceCode &&
                                districtCode &&
                                locations[provinceCode]?.["quan-huyen"]?.[districtCode]?.["xa-phuong"]
                            ) {
                                const wards = locations[provinceCode]["quan-huyen"][districtCode]["xa-phuong"];
                                Object.entries(wards).forEach(([code, ward]) => {
                                    const option = document.createElement("option");
                                    option.value = ward.name;
                                    option.textContent = ward.name;
                                    wardSelect.appendChild(option);
                                });
                            }
                        }

                        // Event listeners
                        provinceSelect.addEventListener("change", (e) => {
                            const provinceName = e.target.value;
                            loadDistricts(provinceName);
                        });

                        districtSelect.addEventListener("change", (e) => {
                            const districtName = e.target.value;
                            const provinceName = provinceSelect.value;
                            loadWards(provinceName, districtName);
                        });

                        // Initialize
                        loadProvinces(locations);
                    }
                })
                .catch((err) => console.error("Error fetching locations:", err));

            // Add SweetAlert2 on form submit
            const companyForm = document.getElementById("companyForm");
            companyForm.addEventListener("submit", function (event) {
                event.preventDefault(); // Prevent form submission for testing

                // Show loading notification
                Swal.fire({
                    title: "Đang cập nhật...",
                    text: "Vui lòng đợi trong giây lát.",
                    imageUrl: "https://loading.io/spinners/clock/index.ajax-spinner.gif",
                    showConfirmButton: false,
                    allowOutsideClick: false,
                    didOpen: () => {
                        Swal.showLoading();
                    },
                });

                // Simulate a delay (remove this when you integrate with your API)
                setTimeout(() => {
                    // Simulate successful submission
                    Swal.fire({
                        title: "Cập nhật thành công!",
                        text: "Thông tin công ty đã được cập nhật.",
                        icon: "success",
                        confirmButtonText: "OK",
                    }).then(() => {
                        // When the user clicks "OK", submit the form
                        companyForm.submit();
                    });
                }, 1000); // Simulate 3 seconds delay
            });
        </script>
    </body>
</html>
